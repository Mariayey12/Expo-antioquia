{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]  // Aseg√∫rate de que las rutas coincidan correctamente
      }
    },
    "include": [
      "resources/js/**/*.vue"  // Solo incluye los archivos Vue si no usas TypeScript
    ],
    "exclude": [
      "node_modules" // Excluye node_modules si es necesario
    ]
  }
